<Controls:MetroWindow x:Class="Presentation.Payments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Payments" Height="225" Width="250" Background="#FFC5D8FF" Icon="GSH.ico" ResizeMode="CanMinimize">
    <Grid Margin="0,0,2,0">
        <Label x:Name="lbl_Name" Content="" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontWeight="ExtraBold"/>
        <GroupBox x:Name="groupBox" Header="Payment" Margin="20,60,20,0" VerticalAlignment="Top" Height="75">
            <Grid HorizontalAlignment="Left" Width="190" Margin="0,0,-2,1">
                <RadioButton x:Name="rdbtn_Yes" Content="Yes" HorizontalAlignment="Left" Margin="40,7,0,0" VerticalAlignment="Top"/>
                <RadioButton x:Name="rdbtn_No" Content="No" Margin="110,7,40,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Button x:Name="btn_Confirm" Content="Confirm" Margin="83,157,82,0" VerticalAlignment="Top" Click="btn_Confirm_Click"/>
    </Grid>
</Controls:MetroWindow>
